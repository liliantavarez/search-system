         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </Label>
      <Label fx:id="lblErrors">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label style="-fx-font-size: 20;" text="UsuÃ¡rio">
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtUsuario" alignment="CENTER" maxWidth="150.0" onKeyReleased="#txtUsuarioKeyReleased">
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
