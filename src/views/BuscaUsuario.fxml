         <VBox.margin>
            <Insets bottom="100.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <HBox>
         <children>
            <HBox alignment="BOTTOM_LEFT" prefWidth="540.0">
               <children>
                  <Button fx:id="BtVoltar" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBtVoltarAcction" prefWidth="74.0" style="-fx-text-fill: black; -fx-background-color: white; -fx-background-radius: 5;" text="Voltar">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT" prefWidth="540.0">
               <children>
                  <Button fx:id="btSair" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBtSairAcction" prefWidth="74.0" style="-fx-text-fill: black; -fx-background-color: white; -fx-background-radius: 5;" text="Sair">
                     <HBox.margin>
                        <Insets right="45.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</VBox>
