<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1080.0" style="-fx-background-color: radial-gradient(focus-distance 0% , center 50% 50% , radius 55% , #dcdcdc, #808080);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CadUsuarioController">
   <children>
      <Label style="-fx-font-size: 40; -fx-background-color: radial-gradient(focus-distance 0% , center 50% 50% , radius 55% , #dcdcdc, #808080); -fx-background-radius: 5;" text="Search System ">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </Label>
      <Label style="-fx-font-size: 18; -fx-background-color: radial-gradient(focus-distance 0% , center 50% 50% , radius 55% , #dcdcdc, #808080); -fx-background-radius: 5;" text="Cadastro Usuário">
         <VBox.margin>
            <Insets bottom="50.0" top="23.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </padding>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox alignment="TOP_RIGHT">
               <children>
                  <Label alignment="BOTTOM_LEFT" contentDisplay="BOTTOM" style="-fx-text-fill: whitesmoke; -fx-font-size: 16; -fx-font-weight: bold;" text="Nome:" textAlignment="RIGHT">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label style="-fx-text-fill: whitesmoke; -fx-font-size: 16; -fx-font-weight: bold;" text="Usuário:" textAlignment="RIGHT">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label style="-fx-text-fill: whitesmoke; -fx-font-size: 16; -fx-font-weight: bold;" text="Senha:" textAlignment="RIGHT">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label style="-fx-text-fill: whitesmoke; -fx-font-size: 16; -fx-font-weight: bold;" text="Confirmar Senha:" textAlignment="RIGHT">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label style="-fx-text-fill: whitesmoke; -fx-font-size: 16; -fx-font-weight: bold;" text="E-mail:" textAlignment="RIGHT">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER">
                     <children>
                        <Label style="-fx-text-fill: whitesmoke; -fx-font-weight: bold; -fx-font-size: 16;" text="Nível de acesso:" />
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <TextField fx:id="txtNome" alignment="BOTTOM_LEFT" prefHeight="0.0" prefWidth="263.0" style="-fx-padding: 0; -fx-font-size: 16;">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="txtUsuario" onKeyReleased="#txtUsuarioKeyReleased" style="-fx-padding: 0; -fx-font-size: 16;">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="txtSenha" style="-fx-padding: 0; -fx-font-size: 16;">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="txtConfsenha" style="-fx-padding: 0; -fx-font-size: 16;">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="txtEmail" style="-fx-padding: 0; -fx-font-size: 16;">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </TextField>
                  <HBox>
                     <children>
                        <RadioButton mnemonicParsing="false" selected="true" style="-fx-text-fill: whitesmoke; -fx-font-weight: bold; -fx-font-size: 16;" text="Usuario">
                           <toggleGroup>
                              <ToggleGroup fx:id="tipousuario" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" style="-fx-text-fill: whitesmoke; -fx-font-weight: bold; -fx-font-size: 16;" text="Administrador" toggleGroup="$tipousuario" />
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </HBox>
      <Button fx:id="btSalvar" mnemonicParsing="false" onAction="#onBtSalvarAcction" prefWidth="100.0" style="-fx-text-fill: black; -fx-background-color: white; -fx-background-radius: 5;" text="Salvar">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Button>
      <HBox alignment="TOP_CENTER" prefHeight="91.0" prefWidth="1080.0">
         <children>
            <HBox alignment="BOTTOM_LEFT" prefWidth="540.0">
               <children>
                  <Button fx:id="btVoltar" mnemonicParsing="false" onAction="#onBtVoltarAcction" prefWidth="100.0" style="-fx-text-fill: black; -fx-background-color: white; -fx-background-radius: 5;" text="Voltar">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT" prefWidth="540.0">
               <children>
                  <Button fx:id="btSair" mnemonicParsing="false" onAction="#onBtSairAcction" prefWidth="100.0" style="-fx-text-fill: black; -fx-background-color: white; -fx-background-radius: 5;" text="Sair">
                     <HBox.margin>
                        <Insets right="45.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</VBox>
